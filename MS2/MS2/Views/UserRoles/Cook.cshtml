@using MS2.Data.Entities
@model List<Order>

<div class="container">
    <h1>Hello Cook</h1>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Order #</th>
                <th>Preparing</th>
                <th>Complete</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var order in Model)
                {
                        <tr>
                            <td><a class="btn btn-primary" asp-controller="UserRoles" asp-action="OrderView" asp-route-id="@order.OrderNumber.ToString()">@order.OrderNumber.ToString()</a></td>
                            @{
                                bool allPreparing = true;
                                foreach (OrderEntry item in order.Items)
                                {
                                    if (item.PreparingTS == null)
                                        allPreparing = false;
                                }
                                if (allPreparing)
                                {
                                    <td><input checked type="checkbox" /></td>
                                }
                                else
                                {
                                    <td><input type="checkbox" /></td>
                                }
                            }

                            @{
                                bool allCompleted = true;
                                foreach (OrderEntry item in order.Items)
                                {
                                    if (item.CompletedTS == null)
                                        allCompleted = false;
                                }
                                if (allCompleted)
                                {
                                    <td><input checked type="checkbox" /></td>
                                }
                                else
                                {
                                    <td><input type="checkbox" /></td>
                                }
                            }
                        </tr>
                }
            }
        </tbody>
    </table>
</div>
