            <li data-target="#carouselExampleIndicators" data-slide-to="3"></li>
        </ol>
        <div class="carousel-inner">
            <a href="/Order#menu-item-header-Pizzas" class="carousel-item active">
                <img src="~/img/Pepperoni Pizza.jpg" />
                <div class="carousel-caption">
                    Pepperoni Pizza
                </div>
            </a>
            <a href="/Order#menu-item-header-Pizzas" class="carousel-item">
                <img src="~/img/All Dressed Pizza.jpg">
                <div class="carousel-caption">
                    All Dressed Pizza
                </div>
            </a>
            <a href="/Order#menu-item-header-Pizzas" class="carousel-item">
                <img src="~/img/Cheese Pizza.jpg">
                <div class="carousel-caption">
                    Cheese Pizza
                </div>
            </a>
            <a href="/Order#menu-item-header-Pizzas" class="carousel-item">
                <img src="~/img/Vegetarian Pizza.jpg">
                <div class="carousel-caption">
                    Vegetarian Pizza
                </div>
            </a>
        </div>
        <a class="carousel-control-prev" href="#index-carousel" role="button" data-slide="prev" style="background-color: rgba(255, 0, 0, 0.5)">
