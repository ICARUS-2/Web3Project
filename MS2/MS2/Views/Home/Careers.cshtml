@{
    <div class="careerPageDiv">
        <img src="~/img/career-page-header.jpg" class="careerHeaderImg" />
        <h1>Work At HellaGoodPizza</h1>

        <div class="careerPageLists">
            <div>
                <h2>What we believe in</h2>
                <ul>
                    <li>Hard work</li>
                    <li>Advancement opportunity</li>
                    <li>Teamwork</li>
                    <li>Sense of Community</li>
                </ul>
            </div>

            <div>
                <h2>Positions Available</h2>
                <ul>
                    <li>Cook ($16/h Starting)</li>
                    <li>Cashier ($15/h Starting)</li>
                    <li>Delivery Driver ($16/h Starting)</li>
                    <li>Assistant Manager ($21/h Starting)</li>
                </ul>
            </div>
        </div>

        <a class="btn-success applyNowBtn" href="mailto:careers@hellagoodpizza.com?subject=Careers">Apply Now</a>

    </div>

    <style>
        .careerPageDiv
        {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .careerHeaderImg
        {
            max-width: 1000px;
            max-height: 500px;
        }

        .careerPageLists
        {
            width: 100%;
            margin-top: 40px;
            display: flex;
            flex-direction: row;
            justify-content: space-around;
        }

        .applyNowBtn
        {
            margin-top: 30px;
            width: 100px;
            height: 50px;
            text-align: center;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 5px
        }
    </style>
}
