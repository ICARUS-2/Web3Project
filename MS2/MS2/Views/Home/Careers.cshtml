@model IEnumerable<MS2.Data.Entities.JobPosting>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    <div class="careerPageDiv">
        <img src="~/img/career-page-header.jpg" class="careerHeaderImg" />
        <h1>Work At HellaGoodPizza</h1>

        <div class="careerPageLists">
            <div>
                <h2>What we believe in</h2>
                <ul>
                    <li>Hard work</li>
                    <li>Advancement opportunity</li>
                    <li>Teamwork</li>
                    <li>Sense of Community</li>
                </ul>
            </div>

            <div>
                <h2>Positions Available</h2>
                <ul>
                    @foreach(MS2.Data.Entities.JobPosting jp in Model)
                    {
                        <li>@jp.Title (@jp.Wage.ToString("c")/hr)</li>
                    }
                </ul>
            </div>
        </div>

        <a class="btn-success applyNowBtn" href="mailto:careers@hellagoodpizza.com?subject=Careers">Apply Now</a>

    </div>

    <style>
        .careerPageDiv {
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .careerHeaderImg {
            max-width: 1000px;
            max-height: 500px;
        }

        .careerPageLists {
            width: 100%;
            margin-top: 40px;
            display: flex;
            flex-direction: row;
            justify-content: space-around;
        }

        .applyNowBtn {
            margin-top: 30px;
            width: 100px;
            height: 50px;
            text-align: center;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 5px
        }
    </style>
}
